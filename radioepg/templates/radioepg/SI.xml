<?xml version="1.0" encoding="UTF-8"?>
<serviceInformation xmlns="http://www.worlddab.org/schemas/spi/33"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xmlns:xml="http://www.w3.org/XML/1998/namespace"
                    xsi:schemaLocation="http://www.worlddab.org/schemas/spi/33 http://www.worlddab.org/schemas/spi/33/spi_33.xsd"
                    xml:lang="fi">
    {% if services %}
    <services>
        {% for service in services %}
        <service>
            <shortName>{{ service.shortName }}</shortName>
            <mediumName>{{ service.mediumName }}</mediumName>
            {% for bearer in service.bearer_elements %}
                {{ bearer|safe }}
            {% endfor %}
            {% if service.shortDescription %}
            <mediaDescription>
                <shortDescription>{{ service.shortDescription }}</shortDescription>
            </mediaDescription>
            {% endif %}
            {% if service.logo %}
            <mediaDescription>
                <multimedia url="{{request.scheme}}://{{request.META.HTTP_HOST}}{{ service.logo32url }}"
                            type="logo_colour_square" />
            </mediaDescription>
            <mediaDescription>
                <multimedia url="{{request.scheme}}://{{request.META.HTTP_HOST}}{{ service.logo112url }}"
                            type="logo_colour_rectangle" />
            </mediaDescription>
            <mediaDescription>
                <multimedia url="{{request.scheme}}://{{request.META.HTTP_HOST}}{{ service.logo128url }}"
                            type="logo_unrestricted" mimeValue="image/png" width="128" height="128" />
            </mediaDescription>
            <mediaDescription>
                <multimedia url="{{request.scheme}}://{{request.META.HTTP_HOST}}{{ service.logo320url }}"
                            type="logo_unrestricted" mimeValue="image/png" width="320" height="240" />
            </mediaDescription>
            <mediaDescription>
                <multimedia url="{{request.scheme}}://{{request.META.HTTP_HOST}}{{ service.logo.url }}"
                            type="logo_unrestricted" mimeValue="image/png" width="600" height="600" />
            </mediaDescription>
            {% endif %}
            {% if service.link %}
            <link mimeValue="text/html" uri="{{ service.link }}"/>
            {% endif %}
            <radiodns fqdn="{{ service.fqdn }}" serviceIdentifier="{{ service.serviceIdentifier }}"/>
        </service>
        {% endfor %}
    </services>
    {% endif %}
</serviceInformation>